<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/header %>
  </head>
  <body>
    <header>
     <% include ../partials/mainHeader %>
    </header>
    <div class="main" style="overflow: auto;">
      <div class="main_table">
        <br>
      <label for="anno">Ingrese la asada</label>
      <select id="asada" name="asada" style="width: 20%;">
        <% asadas.forEach(function(asada) {%>
        <option value="<%= asada.codigo%>"><%= asada.Nombre %></option>
        <% }); %>
      </select>
      <br>
      <label for="anno">Ingrese el Año</label>
      <input type="number" id="anno" name="anno">
      <form method="post">
        <table>
          <thead>
            <th>Pregunta</th>
            <th>Respuesta</th>
          </thead>
          <% preguntas.forEach(function(pregunta) { %>
          <tr>
              <td><%= pregunta.Detalle %></td>
              <% if(pregunta.Medida_ID == 1){%>
              <td>
              <select>
                <option value="Si">Sí</option>
                <option value="No">No</option>
              </select>
              </td>
              <% } else if(pregunta.Medida_ID == 2){%>
              <td><input type="number" name=""></td>
              <% } else if(pregunta.Medida_ID == 3){%>
              <td><input type="number" name=""></td>
              <% } else{%>
              <td><input type="text" name=""></td>
              <%}%>
          </tr>
          <% }); %>
        </table>
        <br>
        <br>
        <br>
        <input type="submit" name="btn" value="Guardar">
        <br>
        <br>
        </form>
      </div>
      </div>

      <div class="main_lateral">
      	<% include ../partials/nav %>       
      </div>

  </body>
</html>
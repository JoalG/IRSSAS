<body>

    <div class="d-flex" id= "wrapper">
        <!-- Sidebar Holder -->
        <% include ../partials/lateral %>
        <!-- Page Content Holder -->
        <div id="page-content-wrapper" style="background-color: #FAFAFA;">

                <div class="container-fluid" style="position: relative;">
                    <button class="btn" id="menu-toggle" style="background: none;"><i class="fas fa-bars"></i></button>
                    <a id="export-png" class="btn btn-primary"><i class="fa fa-download"></i> Descargar PNG</a>
                    <a id="image-download" download="map.png"></a>
                    <p id="mycomponent">Indice de Riesgo Sostenible en el Servicio de Agua y Saneamiento</p>

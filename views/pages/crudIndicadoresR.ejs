<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header %>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <% include ../partials/latAdmin %>
        <div id="page-content-wrapper" style="background-color: #FAFAFA;">
            <button class="btn" id="menu-toggle" style="background: none;"><i class="fas fa-bars"></i></button>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="title mt-3 pb-2 font-weight-bold h3">Indicadores</p>
                    </div>
                    <div class="col-auto d-flex align-items-center">
                        <form action="/indicador" id="compsub">
                        
                           
                            <button type="submit" onclick=" return deleteIndicador();" style="visibility: hidden;"
                                id="savebutton" class="btn btn-info navbar-btn">Guardar cambios</button>
                                <button type="button" onclick="location.href='/newindicador';" class="btn btn-info">
                                    <i class="fas fa-plus"></i>
                                </button>
                            <p style="color: #f00;" id="error"></p>
                        </form>

                    </div>
                </div>
                <div class="bg-white shadow p-3 mb-5">

                    <div class="table-responsive">
                        <table class="table table-striped table-borderless" id="tabla-notificaciones">
                            <thead>
                                <tr>
                                    <th scope="col">CÃ³digo</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Subcomponente</th>
                                    <th scope="col">Porcentaje</th>
                                    <th scope="col">Ver</th>
                                    <th scope="col">Eliminar</th>
                                </tr>
                            </thead>
                            <tbody id="componenttable">
                                <%rows.forEach(function(indicador, index) {%>
                                <tr>
                                    <td><%=indicador.Codigo%></td>
                                    <td><%=indicador.Nombre%></td>
                                    <td><%=indicador.Subcomponente%></td>
                                    <td><%=indicador.Valor%>%</td>
                                    <td><button class="btn btn-icon" onclick="location.href='/indicador/<%=indicador.ID%>';">
                                            <i class="fas fa-info-circle" style="color: #325276"></i>
                                        </button></td>
                                    <td><button class="btn btn-icon" onclick="deleteComponent(this, <%=indicador.ID%>);">
                                            <i class="fas fa-trash text-danger"></i>
                                        </button></td>
                                    </td>

                                </tr>
                                <%});%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

   

    <script type="text/javascript">
        $(document).ready(function () {

            $("a[href$='/indicador']").addClass("active");

            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
            $("#divrisk").click(function () {
                $("#divrisk").toggle("slow", "linear");
            });

            $("#buttonrisk").click(function () {
                $("#divrisk").toggle("slow", "linear");
            });


        });
    </script>
    <script src="scripts/crud.js"></script>
</body>

</html>
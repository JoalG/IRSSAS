<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header %>
</head>

<body>

    <div class="wrapper">
        <!-- Sidebar Holder -->
        <% include ../partials/latAdmin %>
        <!-- Page Content Holder -->
        <div id="content">

            <nav class="navbar navbar-default">
                <div class="container-fluid">

                    <div class="navbar-header">
                        <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                            <i class="glyphicon glyphicon-leaf"></i>
                            <span></span>
                        </button>
                        <form action="/asadas" id="compsub">
                            <button type="submit" onclick=" return saveAsada('<%=asada.ID%>');"
                                style="visibility: hidden;" id="savebutton" class="btn btn-info navbar-btn">Guardar
                                cambios</button>
                            <p style="color: #f00;" id="error"></p>
                        </form>
                    </div>

                    <div style="float: right;">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <form action="/logout">
                                <button type="submit" class="btn btn-info navbar-btn">Cerrar Sesión</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div style="margin: 20px;">
                    <h3>ASADA: <%=asada.ID%></h3>
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Nombre">Nombre de la ASADA</label>
                                    <textarea class="form-control" style="resize: none;" id="Nombre"
                                        onchange="updateComponent(this.id);" rows="3"
                                        maxlength="250"><%=asada.Nombre%></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Ubicacion">Dirección oficina ASADA</label>
                                    <textarea class="form-control" style="resize: none;" id="Ubicacion"
                                        onchange="updateComponent(this.id);" rows="3"
                                        maxlength="200"><%=asada.Ubicacion%></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Latitud">Latitud</label>
                                    <input type="number" step="any" class="form-control" style="resize: none;"
                                        id="Latitud" onchange="updateComponent(this.id);" maxlength="50"
                                        value="<%=asada.Latitud%>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Distrito">Provincia - Cantón - Distrito</label>
                                    <select id="Distrito_ID" class="form-control" onchange="updateComponent(this.id)">
                                        <option selected="" value="<%=asada.Distrito_ID%>">
                                            <%=asada.Provincia%>-<%=asada.Canton%>-<%=asada.Distrito%></option>
                                        <%distritos.forEach(function(distrito){%>
                                        <%if(distrito.Codigo != asada.Distrito_ID){%>
                                        <option value="<%=distrito.Codigo%>"><%=distrito.Distrito%></option>
                                        <%}%>
                                                <%});%>
                                    </select>
                                </div>
                              
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Longitud">Longitud</label>
                                    <input type="number" step="any" class="form-control" style="resize: none;"
                                        id="Longitud" onchange="updateComponent(this.id);" maxlength="50"
                                        value="<%=asada.Longitud.replace('\r','')%>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Telefono">Teléfono fijo</label>
                                    <input class="form-control" style="resize: none;" id="Telefono"
                                        onchange="updateComponent(this.id);" maxlength="15"
                                        value="<%=asada.Telefono%>" />
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Enlace">Enlace (URL)</label>
                                    <input class="form-control" style="resize: none;" id="Url"
                                        onchange="updateComponent(this.id);" maxlength="200" value="<%=asada.Url%>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="celular"> Teléfono celular</label>
                                <input class="form-control" style="resize: none;" id="Celular"
                                    onchange="updateComponent(this.id);" maxlength="15" value="<%=asada.Celular%>" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Poblacion">Población abastecida</label>
                                    <input class="form-control" style="resize: none;" id="Poblacion"
                                        onchange="updateComponent(this.id);" maxlength="6"
                                        value="<%=asada.Poblacion%>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="cantAbonados">Número de abonados</label>
                                    <input class="form-control" style="resize: none;" id="cantAbonados"
                                        onchange="updateComponent(this.id);" maxlength="6"
                                        value="<%=asada.cantAbonados%>" />
                                </div>

                            </div>
                        </div>
                      
                    </form>
                </div>
                <div id="divbutton" style=" position: absolute; bottom: 6px; right: 8px;">
                </div>
            </nav>
        </div>
    </div>


    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- jQuery Custom Scroller CDN -->
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {


            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
                $('.collapse.in').toggleClass('in');
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });

            $("#divrisk").click(function () {
                $("#divrisk").toggle("slow", "linear");
            });

            $("#buttonrisk").click(function () {
                $("#divrisk").toggle("slow", "linear");
            });


        });
    </script>
    <script src="/scripts/crud.js"></script>
</body>

</html>
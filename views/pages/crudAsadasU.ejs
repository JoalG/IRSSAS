<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header %>
</head>

<body>

    <div class="d-flex" id="wrapper">
        <!-- Sidebar Holder -->
        <% include ../partials/latAdmin %>
        <!-- Page Content Holder -->

        <div id="page-content-wrapper" style="background-color: #FAFAFA;">
            <button class="btn" id="menu-toggle" style="background: none;"><i class="fas fa-bars"></i></button>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="title mt-3 pb-2 font-weight-bold h3">ASADA: <%=asada.ID%></p>
                    </div>
                    <div class="col-auto d-flex align-items-center">
                       
                        <form action="/asadas" id="compsub">
                            <a href="/generarInformeMejora?asada=<%=asada.ID%>" class="btn btn-info">Ver informe de opciones de mejora</a>
                            <button type="submit" onclick=" return saveAsada('<%=asada.ID%>');"
                                style="visibility: hidden;" id="savebutton" class="btn btn-info">Guardar
                                cambios</button>
                            <p style="color: #f00;" id="error"></p>
                        </form>
                    </div>
                </div>

                <div class="bg-white shadow p-3 mb-5">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Nombre">Nombre de la ASADA</label>
                                    <input class="form-control"  id="Nombre"
                                        onchange="updateComponent(this.id);" 
                                        maxlength="250" value="<%=asada.Nombre%>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Distrito">Provincia - Cantón - Distrito</label>
                                    <select id="Distrito_ID" class="form-control" onchange="updateComponent(this.id)">
                                        <option selected="" value="<%=asada.Distrito_ID%>">
                                            <%=asada.Provincia%>-<%=asada.Canton%>-<%=asada.Distrito%></option>
                                        <%distritos.forEach(function(distrito){%>
                                        <%if(distrito.Codigo != asada.Distrito_ID){%>
                                        <option value="<%=distrito.Codigo%>"><%=distrito.Distrito%></option>
                                        <%}%>
                                                <%});%>
                                    </select>
                                </div>
                              
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Latitud">Latitud</label>
                                    <input type="number" step="any" class="form-control" 
                                        id="Latitud" onchange="updateComponent(this.id);" maxlength="50"
                                        value="<%=asada.Latitud%>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Ubicacion">Dirección oficina ASADA</label>
                                    <input class="form-control" id="Ubicacion"
                                        onchange="updateComponent(this.id);" 
                                        maxlength="200" value="<%=asada.Ubicacion%>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Longitud">Longitud</label>
                                    <input type="number" step="any" class="form-control" 
                                        id="Longitud" onchange="updateComponent(this.id);" maxlength="50"
                                        value="<%=asada.Longitud.replace('\r','')%>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Telefono">Teléfono fijo</label>
                                    <input class="form-control"  id="Telefono"
                                        onchange="updateComponent(this.id);" maxlength="15"
                                        value="<%=asada.Telefono%>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Enlace">Enlace (URL)</label>
                                    <input class="form-control"  id="Url"
                                        onchange="updateComponent(this.id);" maxlength="200" value="<%=asada.Url%>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="celular"> Teléfono celular</label>
                                <input class="form-control" style="resize: none;" id="Celular"
                                    onchange="updateComponent(this.id);" maxlength="15" value="<%=asada.Celular%>" />
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Poblacion">Población abastecida</label>
                                    <input class="form-control" id="Poblacion"
                                        onchange="updateComponent(this.id);" maxlength="6"
                                        value="<%=asada.Poblacion%>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="cantAbonados">Número de abonados</label>
                                    <input class="form-control" style="resize: none;" id="cantAbonados"
                                        onchange="updateComponent(this.id);" maxlength="6"
                                        value="<%=asada.cantAbonados%>" />
                                </div>

                            </div>
                        </div>
                      
                    </form>
                    <div id="divbutton" style=" position: absolute; bottom: 6px; right: 8px;">
                    </div>


                </div>


            </div>
        </div>





     
    </div>


  

    <script type="text/javascript">
        $(document).ready(function () {


            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });

            $("#divrisk").click(function () {
                $("#divrisk").toggle("slow", "linear");
            });

            $("#buttonrisk").click(function () {
                $("#divrisk").toggle("slow", "linear");
            });

            $("a[href*='/asadas']").addClass("active");            
        });
    </script>
    <script src="/scripts/crud.js"></script>
</body>

</html>
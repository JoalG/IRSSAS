<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header %>
</head>

<body>

    <div class="d-flex" id="wrapper">
        <!-- Sidebar Holder -->
        <% include ../partials/latAdmin %>
        <!-- Page Content Holder -->

        <div id="page-content-wrapper" style="background-color: #FAFAFA;">
            <button class="btn" id="menu-toggle" style="background: none;"><i class="fas fa-bars"></i></button>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="title mt-3 pb-2 font-weight-bold h3">Crear ASADA</p>
                    </div>
                    <div class="col-auto d-flex align-items-center">


                    </div>
                </div>

                <div class="bg-white shadow p-3 mb-5">
                    <form action="/createasada" method="POST">


                        <div class="form-group">
                            <label for="Formula">Nombre</label>
                            <input required type="text" class="form-control" id="Nombre" placeholder="Nombre de Asada"
                                name="Nombre" value="">
                        </div>

                        <div class="form-group">
                            <label for="Subcomponente">Provincia - Cantón - Distrito</label>
                            <select id="Distrito_ID" name="Distrito_ID" class="form-control">
                                <%distritos.forEach(function(distrito){%>
                                <option value="<%=distrito.Codigo%>"><%=distrito.Distrito%></option>
                                <%});%>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="Formula">Latitud</label>
                            <input required type="number" class="form-control" id="Latitud" step="any"
                                placeholder="ej. -85.565760" name="Latitud" value="">
                        </div>

                        <div class="form-group">
                            <label for="Fuente">Longitud</label>
                            <input required type="number" class="form-control" id="Longitud" step="any"
                                placeholder="ej. 10.023334" name="Longitud" value="">
                        </div>

                        <div class="form-group">
                            <label for="Url">Ubicación</label>
                            <input required type="text" class="form-control" id="Ubicacion"
                                placeholder="ej. 500m N del Centro..." name="Ubicacion" value="">
                        </div>

                        <div class="form-group">
                            <label for="Responsable">Telefono</label>
                            <input required type="number" class="form-control" id="Telefono" placeholder="ej. 88888888"
                                name="Telefono" value="">
                        </div>

                        <div class="form-group">
                            <label for="Periodo">Cantidad de Población</label>
                            <input required type="text" class="form-control" id="Poblacion" min="0" placeholder="250000"
                                name="Poblacion" value="">
                        </div>

                        <div class="form-group">
                            <label for="Frecuencia">URL</label>
                            <input required type="text" class="form-control" id="Url"
                                placeholder="ej. http://irssas.com" name="Url" value="">
                        </div>

                        <div class="form-group">
                            <label for="Frecuencia">Cantidad de Abonados</label>
                            <input required type="text" class="form-control" id="cantAbonados" placeholder="14000"
                                name="cantAbonados" value="">
                        </div>


                        <div class="form-group text-right">
                            <button type="submit" id="savebutton" class="btn btn-info">Crear Asada</button>
                            <p style="color: #f00;" id="error"></p>
                        </div>
                    </form>
                </div>
                <div id="divbutton" style=" position: absolute; bottom: 6px; right: 8px;">
                </div>

            </div>

        </div>
    </div>



    <script type="text/javascript">
        $(document).ready(function () {


            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });

            $("#divrisk").click(function () {
                $("#divrisk").toggle("slow", "linear");
            });

            $("#buttonrisk").click(function () {
                $("#divrisk").toggle("slow", "linear");
            });

            $("a[href$='/asadas']").addClass("active");
        });
    </script>
    <script src="/scripts/crud.js"></script>
</body>

</html>
<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/header %>
    </head>

    <body>

        <div class="wrapper">
            <!-- Sidebar Holder -->
            <% include ../partials/latAdmin %>
            <!-- Page Content Holder -->
            <div id="content">

                <nav class="navbar navbar-default">
                    <div class="container-fluid">

                        <div class="navbar-header">
                            <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                                <i class="glyphicon glyphicon-leaf"></i>
                                <span></span>
                            </button>
                        </div>

                        <div style="float: right;">
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <form action="/logout">
                                    <button type="submit" class="btn btn-info navbar-btn">Cerrar Sesi√≥n</button>
                                </form>
                            </div>                           
                        </div>
                    </div>
                    <div style="margin: 20px;">
                            <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label> Provincia </label>
                                        <select class="form-control" onchange="getCanton()" id="prov">
                                                <option value="0">Sin filtro</option>
                                            <%rows.forEach(function(row, index) {%>
                                                <option value="<%= row.ID%>"><%= row.Nombre%></option>
                                            <%});%>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label> Canton </label>
                                        <select class="form-control" onchange="getDistrito()" id="cant">
                                            <option value="0">Sin filtro</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label> Distrito </label>
                                        <select class="form-control" id="dist">
                                                <option value="0">Sin filtro</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label> Orden </label>
                                        <select class="form-control" id="ord">
                                            <option value="ASC">Ascendente</option>
                                            <option value="DESC">Descendente</option>
                                        </select>
                                    </div>
                                </div>
                        <button onclick="getEstadisticas()">Filtrar</button>
                        <p id="totalAsadas" style="color: black; font-family: Arial, Helvetica, sans-serif;"></p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Asada</th>
                                    <th scope="col">Distrito</th>
                                    <th scope="col">Canton</th>
                                    <th scope="col">Provincia</th>
                                    <th scope="col">IRSSAS</th>
                                    <th scope="col">Detalles</th>
                                </tr>
                            </thead>
                        <tbody id="componenttable">
                        </tbody>
                        </table>
                    </div>


                </nav>
            </div>
        </div>


        <!-- jQuery CDN -->
        <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
        <!-- Bootstrap Js CDN -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <!-- jQuery Custom Scroller CDN -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {
               

                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar, #content').toggleClass('active');
                    $('.collapse.in').toggleClass('in');
                    $('a[aria-expanded=true]').attr('aria-expanded', 'false');
                });

                $("#divrisk").click(function(){
                     $("#divrisk").toggle("slow","linear");
                });

                $("#buttonrisk").click(function(){
                     $("#divrisk").toggle("slow","linear");
                });


            });
            

        </script>
        <script src="scripts/script.js"></script>
        <script src="scripts/getProvCantDist.js"></script>
    </body>
</html>